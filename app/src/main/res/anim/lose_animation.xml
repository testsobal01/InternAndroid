<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/cycle_interpolator"
    android:fillAfter="true">

    <!-- 横方向に小刻みに揺れるアニメーション -->
    <!--
         fromXDelta="-10" : 左に10ピクセル移動開始
         toXDelta="10"    : 右に10ピクセル移動終了
         duration="500"   : 1回の揺れにかかる時間（ミリ秒）
         repeatCount="3"  : この動きを3回繰り返す（合計4回）
         repeatMode="reverse" : 移動後に戻る動きを繰り返す
         interpolatorのcycle_interpolatorにより繰り返しの揺れが滑らかに実現
    -->

    <translate
        android:duration="500"
        android:fromXDelta="-10"
        android:toXDelta="10"
        android:repeatCount="3"
        android:repeatMode="reverse" />

    <!-- フェードアウト（透明度が徐々に半分になる） -->
    <!--
         duration="1000"  : フェードにかかる時間（ミリ秒）
         fromAlpha="1.0" : 元の完全な不透明状態から
         toAlpha="0.5"   : 半透明状態まで変化
    -->

    <alpha
        android:duration="1000"
        android:fromAlpha="1.0"
        android:toAlpha="0.5" />
</set>