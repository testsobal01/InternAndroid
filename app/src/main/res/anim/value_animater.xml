        android:interpolator="@android:anim/accelerate_interpolator"
        android:startOffset="700">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="360"
            android:toYScale="0.0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:duration="1000" />
    </set>
</set>