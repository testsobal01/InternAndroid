        <ImageView
            android:id="@+id/footer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:src="@drawable/ramen_syouyu"
            android:scaleType="centerInside"
            android:alpha="0.25"
            />
        <ImageView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:src="@drawable/ramen_donburi"
            android:scaleType="centerInside"
            android:alpha="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:src="@drawable/ramen_syouyu"
            android:scaleType="centerInside"
