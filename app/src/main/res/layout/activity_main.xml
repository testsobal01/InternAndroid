        <ImageView
            android:id="@+id/footer_img1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:src="@drawable/ramen_donburi"
            android:scaleType="centerInside"
            android:alpha="0"
            />

        <ImageView
            android:id="@+id/footer_img2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:src="@drawable/ramen_donburi"
